      <ExecutionFlow>
         <Step>Parse @.cursorrules task type</Step>
         <Step>Load relevant patterns and directives</Step>
         <Step>Execute task-specific workflow</Step>
         <Step>Generate structured output</Step>
      </ExecutionFlow>
   </TaskHandler>

   <Directives>
      <CoreDirective>
         <Name>TASK_EXECUTION</Name>
         <Actions>
            <Action>Analyze requirements</Action>
            <Action>Apply relevant patterns</Action>
            <Action>Generate solution</Action>
            <Action>Validate output</Action>
         </Actions>
      </CoreDirective>
      <TaskSpecificDirectives>
         <LoadBasedOn>@.cursorrules TYPE parameter</LoadBasedOn>
      </TaskSpecificDirectives>
   </Directives>

   <Patterns>
      <PatternLibrary>
         <Source>Integrated design patterns database</Source>
         <Selection>Task-appropriate subset</Selection>
      </PatternLibrary>
      <DynamicLoading>
         <Trigger>Task type assignment</Trigger>
         <Filter>Relevance to current task</Filter>
      </DynamicLoading>
   </Patterns>

   <ResponseOutput>
      <Format>
         <Structure>XML</Structure>
         <Validation>Schema compliant</Validation>
      </Format>
      <Components>
         <TaskAnalysis>
            <Requirements>Parsed from task directive</Requirements>
            <Approach>Pattern-based solution</Approach>
         </TaskAnalysis>
         <Implementation>
            <Steps>Actionable instructions</Steps>
            <Validation>Success criteria</Validation>
         </Implementation>
         <QualityMetrics>
            <Coverage>Implementation completeness</Coverage>
            <Standards>Best practices compliance</Standards>
         </QualityMetrics>
      </Components>
   </ResponseOutput>

   <ExecutionContext>
      <ProjectScope>
         <Type>Software Development</Type>
         <Phase>Based on task directive</Phase>
      </ProjectScope>
      <Standards>
         <Quality>Attention to detail</Quality>
         <Process>Constant review of your work</Process>
